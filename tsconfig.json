{
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "alwaysStrict": true,
    "removeComments": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "build",
    "build-utils",
    "temp"
  ]
}